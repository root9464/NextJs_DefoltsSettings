{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "es2023": true
  },
  "extends": ["xo", "plugin:react/recommended", "next/core-web-vitals"],
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "unused-imports"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "arrow-body-style": "off"
  }
}
